	<init>
		<command delay="1000">/macro book 2</command>
		<command delay="5000">/lockstyleset 1</command>
		<command delay="6000">/gl blink</command>
	</init>

	<variables>
		<var name="init">0</var>
		<var name="Set">Idle</var>
		<var name="Idle">1</var>
		<var name="Melee">0</var>
		<var name="Mining">0</var>
		<var name="IceStaff">Aquilo's Staff</var>
		<var name="WindStaff">Auster's Staff</var>
		<var name="EarthStaff">Terra's Staff</var>
		<var name="ThunderStaff">Jupiter's Staff</var>
		<var name="WaterStaff">Neptune's Staff</var>
		<var name="FireStaff">Vulcan's Staff</var>
		<var name="DarkStaff">Pluto's Staff</var>
		<var name="LightStaff">Apollo's Staff</var>

		<var name="FireEn">Enfire</var>
		<var name="EarthEn">Enstone</var>
		<var name="WaterEn">Enwater</var>
		<var name="WindEn">Enaero</var>
		<var name="IceEn">Enblizzard</var>
		<var name="ThunderEn">Enthunder</var>
		<var name="LightEn">Enthunder</var>
		<var name="DarkEn">Enthunder</var>
	</variables>

	<inputcommands>
		<cmd input ="/enspell">
			<command>/ma $%e_dayelementEn &lt;me&gt;</command>
		</cmd>

		<cmd input="/idle">
			<setvar name="Set" value="Idle"/>
		</cmd>
		<cmd input="/melee">
			<setvar name="Set" value="Melee"/>
			<command delay="1000">/macro book 20</command>
			<command delay="2000">/lockstyleset 2</command>
			<command delay="3000">/gl blink</command>
		</cmd>
		<cmd input="/empty">
			<setvar name="Set" value="Empty"/>
		</cmd>
		<cmd input="/pdt">
			<setvar name="Set" value="PDT"/>
		</cmd>
		<cmd input="/str">
			<setvar name="Set" value="SavageBlade"/>
		</cmd>
		<cmd input="/bc">
			<setvar name="Set" value="BC"/>
		</cmd>
	</inputcommands>

	<idlegear>
		<equip set="$set"/>
		
		<if advanced="$set=Melee">
			<if p_subjob="WHM">
				<equip>
					<main>Joyeuse</main>
					<sub>Genbu's Shield</sub>
				</equip>
			</if>
			<elseif p_subjob="NIN">
				<equip>
					<main>Enhancing Sword</main>
					<sub>Joyeuse</sub>
					<ear1>Suppanomimi</ear1>
				</equip>
			</elseif>

			<if p_status="Idle">
				<if advanced="%p_mp &lt; 600">
					<equip>
						<body>Dalmatica</body>
					</equip>
				</if>
			</if>
			<elseif p_status="Engaged">
				<equip>
					<hands>Dusk Gloves</hands>
					<feet>Dusk Ledelsens</feet>
				</equip>
			</elseif>
		</if>

		<if p_status="resting">
			<equip set="Resting"/>
			<if p_joblevel="&lt;51">
				<equip>
					<main>Pilgrim's Wand</main>
				</equip>
			</if>
		</if>

		<!-- <if e_area="Northern San d'Oria|Southern San d'Oria|Port San d'Oria">
			<equip>
				<head>Warlock's Chapeau</head>
				<body>Kingdom Aketon</body>
			</equip>
		</if> -->

		<if eq_sub="Kraken Club">
			<equip lock="true">
				<sub>Kraken Club</sub>
			</equip>
		</if>
	</idlegear>

	<preranged></preranged>

	<midranged></midranged>

	<premagic>
		<equip set="Fastcast"></equip>
	</premagic>

	<midmagic>
		<if advanced="$Set=Idle">
			<if ad_type="WhiteMagic">
				<if ad_name="Cure*|Curaga*">
					<equip set="MND"/>
					<equip>
						<main>$LightStaff</main>
					</equip>
				</if><elseif ad_name="Stoneskin">
					<equip set="MND"/>
					<equip>
						<main>$WaterStaff</main>
					</equip>
				</elseif>
			</if>
			<elseif ad_type="BlackMagic">
				<equip set="INT"/>
			</elseif>

			<if ad_element="dark">
				<equip>
					<main>$DarkStaff</main>
				</equip>
			</if>
			<elseif ad_element="earth">
				<equip>
					<main>$EarthStaff</main>
				</equip>
			</elseif>
			<elseif ad_element="fire">
				<equip>
					<main>$FireStaff</main>
				</equip>
			</elseif>
			<elseif ad_element="ice">
				<equip>
					<main>$IceStaff</main>
				</equip>
			</elseif>
			<elseif ad_element="light">
				<equip>
					<main>$LightStaff</main>
				</equip>
			</elseif>
			<elseif ad_element="thunder">
				<equip>
					<main>$ThunderStaff</main>
				</equip>
			</elseif>
			<elseif ad_element="water">
				<equip>
					<main>$WaterStaff</main>
				</equip>
			</elseif>
			<elseif ad_element="wind">
				<equip>
					<main>$WindStaff</main>
				</equip>
			</elseif>
		</if>

		<if ad_skill="enfeeblingmagic|elementalmagic|darkmagic">
			<equip>
				<body>Royal Redingote</body>
				<ear1>Helenus's Earring</ear1>
				<ear2>Cass. Earring</ear2>
				<ring1>Balrahn's Ring</ring1>
			</equip>
			<if ad_skill="enfeeblingmagic">
				<!-- <if ad_type="WhiteMagic">
					<equip set="MND"/>
				</if><elseif ad_type="BlackMagic">
					<equip set="INT"/>
				</elseif> -->
				<equip>
					<head>Duelist's Chapeau</head>
					<neck>Enfeebling Torque</neck>
					<body>Warlock's Tabard</body>
				</equip>
			</if>
			<elseif ad_skill="elementalmagic">
				<if advanced="%p_mpp &lt;= 50">
					<equip>
						<neck>Uggalepih Pendant</neck>
					</equip>
				</if><else>
					<equip>
						<neck>Elemental Torque</neck>
					</equip>
				</else>
				<equip>
					<body>Yigit Gomlek</body>
					<hands>Zenith Mitts</hands>
				</equip>
			</elseif>
			<elseif ad_skill="darkmagic">
				<equip set="INT">
					<neck>Dark Torque</neck>
				</equip>
			</elseif>
		</if>
		<elseif ad_skill="healingmagic">
			<equip>
				<legs>Warlock's Tights</legs>
				<neck>Healing Torque</neck>
			</equip>
		</elseif>
		<elseif ad_skill="enhancingmagic">
			<equip>
				<legs>Warlock's Tights</legs>
				<neck>Enhancing Torque</neck>
			</equip>
		</elseif>
		
		<if ad_type="Ninjutsu">
			<equip set="Haste"/>
			<if ad_name="Monomi*">
				<command>/cancel 71</command>
			</if><elseif ad_name="Utsusemi*">
				<equip>
					<neck>Evasion Torque</neck>
					<back>Bat Cape</back>
				</equip>
			</elseif>
		</if>
	</midmagic>

	<jobability></jobability>
	<weaponskill>
		<if ad_name="Vorpal Blade">
			<equip set="STRWS"/>
		</if>
		<elseif ad_name="Savage Blade">
			<equip set="SavageBlade"/>
		</elseif ><elseif ad_name="Death Blossom">
